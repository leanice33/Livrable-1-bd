
@{
    ViewBag.Title = "Index";
}

<script>

    function generateRandom() {
        var select = document.getElementById('foo');
        var items = select.getElementsByTagName('option');
        var index = Math.floor(Math.random() * items.length);

        select.selectedIndex = index;

    }
   
</script>
<div class="container">
    <h2>Question</h2>

    <div class="form-group">

        <input type="button" class="btn btn-cancel btn-primary" value="Ajouter une question" onclick="location.href='@Url.Action("Test", "Questions")'" />

    </div>
    
    <div class="form-group">

        <input type="button" class="btn btn-cancel btn-primary" value="Lister les questions " onclick="location.href='@Url.Action("Lister", "Questions")'" />

    </div>

    <div class="form-group">
        <input type="button" class="btn btn-cancel btn-primary" value="Supprimer une question" onclick="location.href='@Url.Action("Delete", "Questions")'" />
    </div>
    <div class="form-group">
        
        <select id="foo">
            <option value="DBZ">DBZ</option>
            <option value="LOTR" >LOTR</option>
            <option value="WOW">WOW</option>
            <option value="LOL">LOL</option>
        </select>
        <input type="button" class="btn btn-cancel btn-primary" value="Génerer" onclick="generateRandom()"/>
        <input type="button" class="btn btn-cancel btn-primary" value="Submit" onclick="location.href='@Url.Action("Cat", "Questions")'" />
    </div>


</div>

